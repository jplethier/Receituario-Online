<h1>Cadastro de Balconista</h1>
<fieldset>
  <legend>Cadastro de Balconistas</legend>
    <%= form_for([farmacia_corrente, @balconista]) do |f| %>
      
      <%= f.fields_for :usuario do |u| %>
        <%= u.label :nome %></br>
        <%= u.text_field :nome %></br>

        <%= u.label :cpf %></br>
        <%= u.text_field :cpf_cnpj %></br>
      
        <%= u.label :email %></br>
        <%= u.email_field :email %></br>
      
        <%= u.label :senha %></br>
        <%= u.password_field :senha %></br>
      <% end %>

      <%= f.submit 'Confirmar' %>
    <% end %>
</fieldset>